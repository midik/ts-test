{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts"
    ]
}